// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Product {
    productId    Int      @id @default(autoincrement())
    manufacturer String
    productName  String
    sizeUnit     String
    createdDate  DateTime @default(now())
    updatedDate  DateTime @updatedAt

    productSizes ProductSize[]
}

model ProductSize {
    productSizeId Int      @id @default(autoincrement())
    productId     Int
    size          String
    listPrice     Float
    createdDate   DateTime @default(now())

    product       Product        @relation(fields: [productId], references: [productId])
    offerProducts OfferProduct[]
}

model Client {
    mobile           String   @id
    clientName       String
    address          String
    mailId           String[]
    alternateNumbers String[]
    createdDate      DateTime @default(now())
    updatedDate      DateTime @updatedAt

    offers    Offer[]
    projects  Project[]
    enquiries Enquiry[]
}

model Project {
    projectId   String   @id @default(uuid())
    projectName String
    mobile      String
    createdDate DateTime @default(now())
    updatedDate DateTime @updatedAt

    client    Client    @relation(fields: [mobile], references: [mobile])
    offers    Offer[]
    enquiries Enquiry[]
}

model Offer {
    offerNumber Int      @id @default(autoincrement())
    client      Client   @relation(fields: [mobile], references: [mobile])
    mobile      String
    project     Project  @relation(fields: [projectId], references: [projectId])
    projectId   String
    totalPrice  Float
    createdDate DateTime @default(now())
    updatedDate DateTime @updatedAt

    offerProducts OfferProduct[]
}

model OfferProduct {
    offerProductId String   @id @default(uuid())
    offerNumber    Int
    productSizeId  Int
    quantity       Int      @default(0)
    discount       Float    @default(0)
    createdDate    DateTime @default(now())

    productSize ProductSize @relation(fields: [productSizeId], references: [productSizeId])
    offer       Offer[]
    enquiry     Enquiry[]
}

model Enquiry {
    enquiryId   String   @id @default(uuid())
    offerNumber Int
    client      Client   @relation(fields: [mobile], references: [mobile])
    mobile      String
    project     Project  @relation(fields: [projectId], references: [projectId])
    projectId   String
    discount    Float    @default(0)
    totalPrice  Float
    createdDate DateTime @default(now())

    offerProducts OfferProduct[]
}
